{
	"name": "quizzems-frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "concurrently \"npm run scss:watch\" \"vite dev\"",
		"build": "npm run scss:build && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"scss": "npm run scss:build",
		"scss:build": "sass --load-path=node_modules src/scss/custom.scss static/app.css --no-source-map --style=compressed",
		"scss:watch": "sass --watch --load-path=node_modules src/scss/custom.scss:static/app.css --style=expanded --source-map",
		"scss:dev": "sass --load-path=node_modules src/scss/custom.scss static/app.css --style=expanded --source-map",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.53.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-vercel": "^5.7.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@types/jsdom": "^21.1.7",
		"@vitest/ui": "^3.2.4",
		"concurrently": "^8.2.2",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.1.0",
		"playwright": "^1.53.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"sass": "^1.89.2",
		"svelte": "^5.34.1",
		"svelte-check": "^4.0.0",
		"svelte-preprocess": "^6.0.3",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.3.5"
	},
	"dependencies": {
		"@fortawesome/free-solid-svg-icons": "^6.7.2",
		"@supabase/auth-ui-svelte": "^0.2.9",
		"@supabase/supabase-js": "^2.50.0",
		"@sveltejs/kit": "^2.16.0",
		"bootstrap": "^5.3.7",
		"canvas-confetti": "^1.9.3",
		"cropperjs": "^1.6.2",
		"dotenv": "^16.5.0",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"svelte-fa": "^4.0.4",
		"uuid": "^11.1.0"
	}
}
